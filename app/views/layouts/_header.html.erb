<header >
	<div class="row">
		<div class="col s12">
			<%= image_tag("logo.png", :alt => "logo", :class => "img-logo") %>
			<nav class="z-depth-3 table-top">
				<div class="nav-wrapper">
					<a href="/" class="brand-logo">
						  CAFETERIA!
					</a>
					<ul class="right hide-on-med-and-down">
						<li><a href="/menu_items"><i class="material-icons left">settings_input_svideo</i>Our fMNEU_ITEMS</a></li>
						<li><a><i class="material-icons left">settings_phone</i>Find us</a></li>
						<li><a><i class="material-icons left">chat</i>FAQ</a></li>
					  <%= link_to carts_path, class: "cart left no_left_pad", id: "cart"  do %>
							 		<i class="material-icons left">shopping_cart</i>
							 <% end %>
						</li>
						<li>
						<% if current_user %>

							<div class="col s10">
								<span class="black-text">
									<a class="dropdown-button" href="#!" data-activates="dropdown1">
									<%= current_user.name %> logged on
									<i class="material-icons right">arrow_drop_down</i></a>
									<ul id="dropdown1" class="dropdown-content">
										<li><i class="material-icons left">perm_identity</i><%= link_to "My Profile", user_path(current_user.id) %></li>
										<li><a href="#!"><i class="material-icons left">settings</i>Settings</a></li>
										<li class="divider"></li>
										<li><a href="#!"><i class="material-icons left"></i><%= link_to "Log out", destroy_session_path, method: :delete %></a></li>
									</ul>
								</span>
							</div>
						<% else %>
							<div><%= link_to "Log in", sessions_path, :class =>"in-line" %> | <%= link_to "Sign up", new_sessions_path, :class =>"in-line" %></div>
						<% end %>
						</li>
					</ul>

					<ul id="slide-out" class="side-nav">
						<li><a href="/menu_items"><i class="material-icons left">settings_input_svideo</i>Our MENU ITEMS</a></li>
							<!-- Dropdown Trigger -->
						</ul>
					<a href="#" data-activates="slide-out" class="button-collapse right"><i class="mdi-navigation-menu"></i></a>
				</div>
			</nav>
		</div>
	</div>
</header>
