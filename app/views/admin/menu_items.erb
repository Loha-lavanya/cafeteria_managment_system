
<div>
<h1 align="center">MENU_ITEMS</h1>
</div>
<div>
<table class="table table-striped">
  <thead class="thead-dark">
  <tr>
    <th scope="col">id</h3></th>
    <th scope="col">name</h3></th>
    <th scope="col">category</h3></th>
    <th scope="col">price</h3></th>
    <th scope="col">description</h3></th>
     <th colspan="2"></th>
  </tr>
  </thead>
<tbody>
<% @menu_items.each do |item| %>
  <tr>
    <td><%= item.id %></td>
    <td><%= item.name %></td>
    <td><%= item.menu_category_id %></td>
    <td><%= item.price %></td>
    <td><%= item.description %></td>
    <td><%= link_to "edit", edit_menu_item_path(:id=>"#{item.id}"),class:"btn btn-primary btn-lg"%></td>
    <td><%= link_to "delete", menu_item_path(:id=>"#{item.id}"),method: :delete,class:"btn btn-primary btn-lg"%></td>
  </tr>
<% end %>
</tbody>
</table>
</div>
<%= link_to "Back", admin_dashboard_path,class:"btn btn-primary btn-lg"%>
<%= link_to "ADD ITEM", new_menu_item_path,class:"btn btn-primary btn-lg"%>
