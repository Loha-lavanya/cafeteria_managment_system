<h1>MY CART</h1>
<ul>
  <% @cart.cart_items.each do |cart_item| %>
 <li>Item: <%= cart_item.menu_item.name %></li>
  Price: <%= number_to_currency(cart_item.menu_item.price) %>
  <br>Quantity: <%= cart_item.quantity %>
   <br>Total Price: <%= number_to_currency(cart_item.total_price) %>
</li>

        <%= button_to "Add ", cart_item_add_path(:id => cart_item), method: :post %><%= button_to "Reduce", cart_item_reduce_path(:id => cart_item), method: :post %>
        <%= button_to "Remove item", cart_item_path(cart_item), method: :delete %>
        <hr>
  <% end %>
</ul>
<h3>Sub total: <%= number_to_currency(@cart.sub_total) %></h3>
<%= button_to "Proceed to checkout", "#" %><br>
